<!-- run mapping with cartographer -->
<launch>

<!--- Run cartographer -->
  <param name="/use_sim_time" value="true" />

  <node name="cartographer_node" pkg="cartographer_ros"
      type="cartographer_node" args="
          -configuration_directory
              $(find cartographer_turtlebot)/configuration_files 
          -configuration_basename cartographer_params.lua"
      output="screen">
  </node>

<!--- Run cartographer imu-out-of-order-msgs-removal -->
  <node name="flat_world_imu_node" pkg="cartographer_turtlebot"
      type="cartographer_flat_world_imu_node" output="screen">
    <remap from="imu_in" to="/mobile_base/sensors/imu_data_raw" />
    <remap from="imu_out" to="/imu" />
  </node>

  <node name="rviz" pkg="rviz" type="rviz" required="true"
      args="-d $(find cartographer_turtlebot)/configuration_files/demo_turtlebot.rviz" />
  <node name="playbag" pkg="rosbag" type="play"
      args="-r3 --clock $(arg bag_filename)" />
</launch>
